<Window x:Class="TestNVR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestNVR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Width="100" Height="40" Content="Start" Click="StartBtn_Click"/>
            <Button Width="100" Height="40" Content="Stop" Click="StopBtn_Click" Margin="0,20,0,0"/>
        </StackPanel>
        
    </Grid>
</Window>
